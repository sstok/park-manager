<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ page_heading }} | Park-Manager</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <!-- non-hericon's provided by https://materialdesignicons.com/tag/community -->
    {% endblock %}
</head>
<body>
<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="h-8 w-auto text-center text-4xl text-bold font-medium text-gray-700">Park-Manager</div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            {{ page_heading }}
        </h2>

        {% if error|default('') is not empty %}
            <div class="mt-4 bg-yellow-50 border-l-4 border-yellow-400 p-4" role="alert">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <!-- Heroicon name: x-circle -->
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-yellow-800">
                            {{ 'Error'|trans({}, 'validators') }}
                        </h3>
                        <p class="text-sm text-yellow-700">
                            {{ error|raw }}
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
        {% include '_flashes.html.twig' %}
        {% block content %}{% endblock content %}
    </div>
</div>
</body>
</html>

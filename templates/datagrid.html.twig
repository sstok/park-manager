{% extends '@Lifthill/datagrid.html.twig' %}

{# Base blocks #}

{% block datagrid_container -%}
    {% set attr = attr|merge({'class': 'min-w-full divide-y divide-gray-200' }) %}

    <form action="{{ app.request.uri }}" method="POST" name="{{ name }}" class="mb-5 rounded-md">
        <label for="{{ name }}_search_field" class="block text-sm font-medium text-gray-700">Search</label>
        {% if search_errors is defined %}
        <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <!-- Heroicon name: x-circle -->
                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <div class="text-sm text-red-700">
                        <ul class="space-y-1">
                            {% for error in search_errors|default([]) %}
                                <li><span class="text-red-500 text-xs mr-2 text-left flex-auto">{{ error|trans() }}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {% endif %}

        <div class="bg-gray-50">
            <textarea id="{{ name }}_search_field" name="{{ name }}[_search_query]" cols="50" class="block{% if search_errors is defined %} border-red-300 text-red-900 placeholder-red-300 focus:ring-red-500 focus:border-red-500 {% else%} border-gray-300 focus:ring-blue-500 focus:border-blue-500{% endif%} sm:text-sm rounded-md w-full">
                {{- search_condition|default('') -}}
            </textarea>
        </div>

        <div>
            <button type="submit" name="{{ name }}[_search]" value="1" class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Search
            </button>
        </div>
    </form>

    <table{{ block('attributes') }}>
        <thead class="bg-gray-50">
        <tr>
            {% for header in columns -%}
                {{ lifthill_datagrid_column_header(header, header_attr|default([])) }}
            {% endfor -%}
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        {% for index, row in rows -%}
            {# The row is its own view type (DatagridRowView). This would result in many block renderings #}
            <tr id="{{ name ~ '_row_' ~ index }}"{% with { attr: row.vars.attr } %}{{ block('attributes') }}{% endwith %}>
                {% for cell in row -%}
                    {{ lifthill_datagrid_column_cell(cell) }}
                {% endfor -%}
            </tr>
        {% endfor -%}
        </tbody>
    </table>

    {{ lifthill_datagrid_pager(name, pager, 'twig') }}
{%- endblock %}

{% block column_header -%}
{%- if label is empty -%}
    {% set label = name|humanize -%}
{% endif -%}
    {% set attr = attr|merge({'class': 'px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider' }) %}
    {{ parent() }}
{%- endblock %}

{% block compound_column_header -%}
    {{ block( 'column_header') }}
{%- endblock %}

{% block column_cell -%}
<td class="px-6 py-4 whitespace-nowrap" {{ block('attributes') }}>{%- if use_raw -%}{{ value|raw }}{% else -%}{{ value }}{% endif -%}</td>
{%- endblock %}

{% block compound_column_cell -%}
<td>
    {% for subCell in value -%}
        {{- lifthill_datagrid_column_cell(subCell) -}}
    {% endfor -%}
</td>
{%- endblock %}

{# Core extension blocks #}

{% block action_cell -%}
    {%- if content is empty -%}
        {%- set content = name|humanize -%}
    {% endif -%}

    {%- set url_attr = url_attr|merge({'href' : url}) -%}
    {%- if compound|default(false) %}
        <a{% with { attr: url_attr } %}{{ block('attributes') }}{% endwith %}>{{ content|raw }}</a>
    {% else %}
        <td{{ block('attributes') }}><a{% with { attr: url_attr } %}{{ block('attributes') }}{% endwith %}>{{ content|raw }}</a></td>
    {%- endif %}
{%- endblock %}

{# Support #}

{%- block attributes -%}
    {%- for attrname, attrvalue in attr -%}
        {{- " " -}}
        {%- if attrname in ['title'] -%}
            {{- attrname }}="{{ translation_domain is same as(false) or attrvalue is null ? attrvalue : attrvalue|trans(attr_translation_parameters, translation_domain) }}"
        {%- elseif attrvalue is same as(true) -%}
            {{- attrname }}="{{ attrname }}"
        {%- elseif attrvalue is not same as(false) -%}
            {{- attrname }}="{{ attrvalue }}"
        {%- endif -%}
    {%- endfor -%}
{%- endblock -%}
